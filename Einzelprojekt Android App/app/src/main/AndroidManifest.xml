<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.techfak.gse.maheidemann">

    <application
        android:name=".controller.GameApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="maheidemann"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.ProjectTemplate">
        <activity
            android:name="de.techfak.gse.maheidemann.controller.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.GameboardActivity" />
    </application>

</manifest>